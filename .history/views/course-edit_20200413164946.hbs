<h1>Edit course: {{course.title}}</h1>
<form accept="/courses/edit" method="POST">
    <div class="input-field">
        <input placeholder="title" name="title" id="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Enter course name" data-success="Success">Only literal</span>
    </div>

    <div class="input-field">
        <input placeholder="price" id="price" name="price" type="text" class="validate" required min="10" value="{{course.price}}">
        <label for="price">Course Price</label>
        <span class="helper-text" data-error="Enter price" data-success="Success">Price is number</span>
    </div>

     <div class="input-field">
        <input placeholder="img" id="img" name="img" type="text" class="validate" value="{{course.img}}">
        <label for="img">Img URL</label>
        <span class="helper-text" data-error="Enter url to image"></span>
    </div>
    <input type="hidden" name="id" value="{{course.id}}" />
    <p>
        <button type="submit" class="btn btn-primary">{{ title }}</button>
    </p>

</form>