<h1>Profile</h1>
<div class="row">
    <div class="col s6">
        {{#if user.avatarUrl }}
        <img class="avatar" src="\{{user.avatarUrl}}" alt="avatar-{{user.name}}">
        {{else}}
        <p>Avatar is absent</p>
        {{/if}}
    </div>
    <div class="col s6">
        <form action="/profile" method="POST" enctype="multipart/form-data">
            <p>Your email: <strong>{{user.email}}</strong></p>
            <div class="input-field">
                <input placeholder="name" name="name" id="name" type="text" class="validate" required
                    value="{{user.name}}">
                <label for="title">User Name</label>
                <span class="helper-text" data-error="Enter user name" data-success="Success">Only literal</span>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>Avatar</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>

            <p>
                <input type="hidden" name="_csrf" value="{{csrf}}" />
                <button type="submit" class="btn btn-primary">Edit</button>
            </p>

        </form>

    </div>
</div>