<h1>Profile</h1>
<div class="row">
    <div class="col s6">
        <img class="avatar" src="https://cdn-media-1.freecodecamp.org/images/0*xkJgg-6HskYrQ3N7.jpeg" alt="">
        <p>Avatar is absent</p>
    </div>
    <div class="col s6">
        <form action="/profile" method="POST">
            <p>Your email: <strong>{{user.email}}</strong></p>
            <div class="input-field">
                <input placeholder="name" name="name" id="name" type="text" class="validate" required
                    value="{{user.name}}">
                <label for="title">User Name</label>
                <span class="helper-text" data-error="Enter user name" data-success="Success">Only literal</span>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>File</span>
                    <input type="file">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
        </form>

    </div>
</div>