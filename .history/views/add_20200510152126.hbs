<h1>{{title}}</h1>
<form action="/add" method="POST">
    <div class="input-field">
        <input placeholder="title" name="title" id="title" type="text" class="validate" required>
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Enter course name" data-success="Success">Only literal</span>
    </div>

    <div class="input-field">
        <input placeholder="price" id="price" name="price" type="text" class="validate" required min="10">
        <label for="price">Course Price</label>
        <span class="helper-text" data-error="Enter price" data-success="Success">Price is number</span>
    </div>

    <div class="input-field">
        <input placeholder="img" id="img" name="img" type="text" class="validate">
        <label for="img">Img URL</label>
        <span class="helper-text" data-error="Enter url to image"></span>
    </div>

    <p>
        <input type="hidden" name="_csef" value="{{csrf}}" />
        <button type="submit" class="btn btn-primary">Add new course</button>
    </p>

</form>